<?xml version="1.0" encoding="UTF-8"?>

<!-- 加载优先级：cache > xml > 注解 > 默认值 -->
<fom>

	<!-- 配置包名，多值逗号分隔，启动时加载所有包下面有@FomContext的context -->
	<fom-scan>com.examples</fom-scan>

	<!-- 包含配置文件，路径为相对于servletContext根路径的相对路径 -->
	<includes>
		<include>WEB-INF/oracle/examples.xml</include>
		<include>WEB-INF/mysql/examples.xml</include>
		<include>WEB-INF/elasticsearch/examples.xml</include>
	</includes>
</fom>

