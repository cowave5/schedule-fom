<?xml version="1.0" encoding="UTF-8"?>
<fom>
    <fom-scan>com.fom</fom-scan>

	<config name="example1" class="com.fom.examples.EsImpoterConfig">
		<remark>使用自定义pool的方式将本地指定目录下text文本解析导入Es库</remark>
		<cron>0 0/15 * * * ?</scanner.cron>
		<pattern>demo.bcp</src.pattern>
		<thread.min>10</thread.min>
		<thread.max>10</thread.max>
		<thread.aliveTime>30</thread.aliveTime>
		<thread.overTime>86400</thread.overTime>
		<thread.cancellable>false</thread.cancellable>
		<src.uri>${webapp.root}/source</src.uri>
		<src.delMatchFail>false</src.delMatchFail>
		<es.index>demo</es.index>
		<es.type>demo</es.type>
		<es.json>WEB-INF/index/index_example.json</es.json>
		<importer.batch>5000</importer.batch>
	</config>
</fom>